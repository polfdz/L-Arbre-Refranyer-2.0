<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.algracolectiu.arbrerefranyer.MenuPrincipal"
    android:background="@drawable/menu_principal_fondo"
    android:orientation="vertical" >

    <Space
        android:id="@+id/spacetop"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4" />


    <LinearLayout
        android:id="@+id/BotonsMenu"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical" >

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2" />

        <Button
            android:id="@+id/bTradicional"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/anim_menu_principal_boto"
            android:text="@string/button_partida"
            android:layout_gravity="center"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/bversus"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/anim_menu_principal_boto"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_gravity="center"
            android:text="@string/button_versus"
            android:textColor="#000000" />

        <Button
            android:id="@+id/bpuntuacions"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/anim_menu_principal_boto"
            android:layout_gravity="center"
            android:text="@string/button_perfil"
            android:textColor="#000000"/>


        <Button
            android:id="@+id/bbiblioteca"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/anim_menu_principal_boto"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/button_biblio"
            android:textColor="#000000"/>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/BotonsAboutUs"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.5">

        <Space
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2" />

        <LinearLayout
            android:id="@+id/layout_button_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/bSettings"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/anim_menu_principal_boto_settings" />

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.2" />

        <LinearLayout
            android:id="@+id/layout_button_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/bInfo"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/anim_menu_principal_boto_info" />

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2" />


    </LinearLayout>
    <Space
        android:id="@+id/spacebottom"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1" />
</LinearLayout>