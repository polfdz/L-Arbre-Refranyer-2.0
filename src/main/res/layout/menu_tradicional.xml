<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.algracolectiu.tradicional.SeleccioNivells"
    android:orientation="vertical"
    android:background="@drawable/seleccio_nivells_fondu" >


    <LinearLayout
        android:id="@+id/layout_niv"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="9">
        <Space
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/layout_espai"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="7">

            <Space
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1.8"/>

            <LinearLayout
                android:id="@+id/layout_nivells"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="5">

                <Space
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"/>

                <LinearLayout
                    android:id="@+id/layout_1_2_3"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:id="@+id/primer"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:background="@drawable/anim_seleccio_nivells_boto">

                        <ImageView
                            android:id="@+id/bFacebook"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:src="@drawable/seleccio_1" />

                    </RelativeLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.1"/>

                    <RelativeLayout
                        android:id="@+id/segon"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:background="@drawable/anim_seleccio_nivells_boto"  >

                        <ImageView
                            android:id="@+id/person12"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:src="@drawable/seleccio_2" />

                        <LinearLayout
                            android:id="@+id/primerB"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical"
                            android:background="@drawable/seleccio_nivells_candau"
                            android:visibility="visible">
                        </LinearLayout>

                    </RelativeLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.1"/>

                    <RelativeLayout
                        android:id="@+id/tercer"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:background="@drawable/anim_seleccio_nivells_boto"  >

                        <ImageView
                            android:id="@+id/person4"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:src="@drawable/seleccio_3" />

                        <LinearLayout
                            android:id="@+id/tercerBlock"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical"
                            android:background="@drawable/seleccio_nivells_candau"  >
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <Space
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"/>

                <LinearLayout
                    android:id="@+id/layout_4_5_6"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >

                    <RelativeLayout
                        android:id="@+id/cuart"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/anim_seleccio_nivells_boto" >

                        <ImageView
                            android:id="@+id/person2"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:src="@drawable/seleccio_4" />

                        <LinearLayout
                            android:id="@+id/cuartBlock"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/seleccio_nivells_candau"
                            android:orientation="vertical" >
                        </LinearLayout>

                    </RelativeLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.1"/>

                    <RelativeLayout
                        android:id="@+id/cinque"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/anim_seleccio_nivells_boto" >

                        <ImageView
                            android:id="@+id/person3"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:src="@drawable/seleccio_5" />

                        <LinearLayout
                            android:id="@+id/cinqueBlock"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/seleccio_nivells_candau"
                            android:orientation="vertical" >
                        </LinearLayout>

                    </RelativeLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.1"/>

                    <RelativeLayout
                        android:id="@+id/sise"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/anim_seleccio_nivells_boto">

                        <ImageView
                            android:id="@+id/person5"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:src="@drawable/seleccio_6" />

                        <LinearLayout
                            android:id="@+id/siseBlock"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/seleccio_nivells_candau"
                            android:orientation="vertical" >

                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <Space
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"/>

                <LinearLayout
                    android:id="@+id/layout_7_8_9"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >

                    <RelativeLayout
                        android:id="@+id/sete"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/anim_seleccio_nivells_boto" >

                        <ImageView
                            android:id="@+id/person6"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:src="@drawable/seleccio_7" />

                        <LinearLayout
                            android:id="@+id/seteBlock"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/seleccio_nivells_candau"
                            android:orientation="vertical" >
                        </LinearLayout>

                    </RelativeLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.1"/>


                    <RelativeLayout
                        android:id="@+id/vuite"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/anim_seleccio_nivells_boto">

                        <ImageView
                            android:id="@+id/person7"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:src="@drawable/seleccio_8" />

                        <LinearLayout
                            android:id="@+id/vuiteBlock"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/seleccio_nivells_candau"
                            android:orientation="vertical" >
                        </LinearLayout>

                    </RelativeLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.1"/>

                    <RelativeLayout
                        android:id="@+id/nove"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/anim_seleccio_nivells_boto" >

                        <ImageView
                            android:id="@+id/person8"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:src="@drawable/seleccio_9" />

                        <LinearLayout
                            android:id="@+id/noveBlock"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/seleccio_nivells_candau"
                            android:orientation="vertical" >
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>
                <Space
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"/>
            </LinearLayout>

            <Space
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"/>

        </LinearLayout>
        <Space
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="horizontal" >

        <Space
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5" />

        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Space
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="3" />

            <Button
                android:id="@+id/bBack"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@drawable/anim_seleccio_nivells_back" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7" />

        <LinearLayout
            android:id="@+id/layout_dia"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:orientation="vertical" >

            <Button
                android:id="@+id/bDia"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/anim_seleccio_nivells_dia" />
        </LinearLayout>
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.62" />

        <LinearLayout
            android:id="@+id/layout_posfulles"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" > >

            <Space
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5" />

            <LinearLayout
                android:id="@+id/layout_fullesUsr"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="@drawable/anim_seleccio_nivells_fulla"
                android:orientation="vertical" >


                <Space
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:id="@+id/layout_pos"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >


                    <Space
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="3"/>

                    <TextView
                        android:id="@+id/textUserFuller"
                        android:text="10000"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="3"
                        android:textSize="12sp"
                        android:gravity="center"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.08"/>

                </LinearLayout>


                <Space
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5" />
    </LinearLayout>

    <Space
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>
</LinearLayout>
